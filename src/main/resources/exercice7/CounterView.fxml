<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.umontpellier.iut.exercice7.CounterController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="counterLabel" textFill="#1e246b">
                <font>
                    <Font size="28" />
                </font>
            </Label>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="decrementButton" onAction="#increment" style="-fx-background-color: #31BCA5;" text="Click to decrement" />
                <Button fx:id="incrementButton" onAction="#decrement" style="-fx-background-color: #FF7619;" text="Click to increment" />
            </HBox>

            <Button fx:id="resetButton" onAction="#reset" style="-fx-background-color: #F13535;" text="Click to reset" />
        </VBox>
    </center>
</BorderPane>
